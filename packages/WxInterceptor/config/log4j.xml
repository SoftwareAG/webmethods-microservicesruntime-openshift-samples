<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>  
	<appender name="com.softwareag.wx.is.interceptor"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyyMMdd" />
		<param name="Append" value="true" />
		<param name="File" value="./logs/WxInterceptor.log" />
		<param name="threshold" value="trace"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%c] - %m%n" />
		</layout>
	</appender>
	
	<category name="com.softwareag.wx.is.interceptor" additivity="false">
		<priority value="info"/>
		<appender-ref ref="com.softwareag.wx.is.interceptor"/>
	</category>
	
	<category name="com.softwareag.wx.is.interceptor.measure" additivity="false">
		<priority value="trace"/>
		<appender-ref ref="com.softwareag.wx.is.interceptor"/>
	</category>
	
	<category name="com.google.gson" additivity="false">
		<priority value="trace"/>
		<appender-ref ref="com.softwareag.wx.is.interceptor"/>
	</category>
	
	
	
	
</log4j:configuration>
